{
  "name": "hyf-final-project-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">= 1.19.1",
    "node": ">= 17.3.0"
  },
  "scripts": {
    "knex": "knex --cwd ./packages/server",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|ts|tsx|json|css)\"",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint --fix",
    "stylelint:fix": "yarn stylelint \"**/*.css\" --fix",
    "validate": "yarn lint",
    "validate:styles": "yarn stylelint \"**/*.css\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.0",
    "prettier": "^2.6.2",
    "stylelint": "^14.8.2",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-prettier": "^2.0.0"
  },
  "lint-staged": {
    "**/*.+(js|jsx|ts|tsx)": [
      "yarn validate"
    ],
    "**/*.+(css)": [
      "yarn validate:styles"
    ]
  }
}
